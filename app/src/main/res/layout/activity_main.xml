<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <include layout="@menu/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="Conta"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        android:text="R$99,999,99"
        android:textColor="#808080"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"

        >
        <Button
            android:layout_width="65sp"
            android:layout_height="75sp"
            app:icon="@drawable/pix"
            android:backgroundTint="#d3d3d3"
            app:iconTint="@color/black"
            app:cornerRadius="100dp" />

        <Button
            android:layout_width="65sp"
            android:layout_height="75sp"
            android:layout_marginLeft="10sp"
            app:iconTint="@color/black"
            android:backgroundTint="#d3d3d3"
            app:icon="@drawable/dinheiro"
            app:cornerRadius="100dp" />

        <Button
            android:layout_width="65sp"
            android:layout_height="75sp"
            app:iconTint="@color/black"
            android:layout_marginLeft="10sp"
            android:backgroundTint="#d3d3d3"
            app:icon="@drawable/cima"
            app:cornerRadius="100dp" />

        <Button
            android:layout_width="65sp"
            android:layout_height="75sp"
            app:iconTint="@color/black"
            android:layout_marginLeft="10sp"
            android:backgroundTint="#d3d3d3"
            app:icon="@drawable/baixo"
            app:cornerRadius="100dp" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:backgroundTint="#d3d3d3"
        app:cornerRadius="10dp"
        android:text="Meus Cartões"
        android:textColor="@color/black"
        app:icon="@drawable/cartao"
        app:iconTint="@color/black"
    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:backgroundTint="#d3d3d3"
        app:cornerRadius="10dp"
        android:text="Conheça Nubank Vida: um seguro simples e que cabe no seu bolso"
        android:textColor="@color/black"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        />

    <Button
        android:layout_width="65sp"
        android:layout_height="75sp"
        android:layout_marginLeft="10sp"
        app:iconTint="@color/black"
        android:backgroundTint="@color/white"
        app:icon="@drawable/dinheiro"
        app:cornerRadius="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cartão de Crédito"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fatura Atual"
        android:layout_marginLeft="10sp"
        android:textSize="16sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 1.347,00"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limite Disponivel de R$ 99.156.00"
        android:layout_marginLeft="10sp"
        android:textSize="16sp"
        />

</LinearLayout>