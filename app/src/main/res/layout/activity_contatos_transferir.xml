<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".contatos_transferir"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txtPraQuemTransferirDinheiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Para quem você quer transferir R$689,56?"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encontre um contato na sua lista ou inicie uma nova transferência"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="#505050"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:backgroundTint="#d3d3d3"
            android:hint="Nome, CPF/CNPJ ou Chave Pix"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contatos frequentes "
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="10dp"

            >
            <Button
                android:id="@+id/btnContatosTransferir"
                android:layout_width="65sp"
                android:layout_height="75sp"
                app:icon="@drawable/conta"
                android:backgroundTint="#d3d3d3"
                app:iconTint="@color/black"
                app:cornerRadius="100dp" />

            <Button
                android:layout_width="65sp"
                android:layout_height="75sp"
                android:layout_marginLeft="10sp"
                app:iconTint="@color/black"
                android:backgroundTint="#d3d3d3"
                app:icon="@drawable/conta"
                app:cornerRadius="100dp" />

            <Button
                android:layout_width="65sp"
                android:layout_height="75sp"
                app:iconTint="@color/black"
                android:layout_marginLeft="10sp"
                android:backgroundTint="#d3d3d3"
                app:icon="@drawable/conta"
                app:cornerRadius="100dp" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="Prof. Igor     Prof. luiz      Prof. Talon"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todos os contatos"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="65sp"
                android:layout_height="75sp"
                app:icon="@drawable/conta"
                android:backgroundTint="#d3d3d3"
                app:iconTint="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="João Vitor"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="65sp"
                android:layout_height="75sp"
                app:icon="@drawable/conta"
                android:backgroundTint="#d3d3d3"
                app:iconTint="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leticia Furuse"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="65sp"
                android:layout_height="75sp"
                app:icon="@drawable/conta"
                android:backgroundTint="#d3d3d3"
                app:iconTint="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedro Lucas"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="65sp"
                android:layout_height="75sp"
                app:icon="@drawable/conta"
                android:backgroundTint="#d3d3d3"
                app:iconTint="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitor Hugo"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="65sp"
                android:layout_height="75sp"
                app:icon="@drawable/conta"
                android:backgroundTint="#d3d3d3"
                app:iconTint="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professor Igor"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="65sp"
                android:layout_height="75sp"
                app:icon="@drawable/conta"
                android:backgroundTint="#d3d3d3"
                app:iconTint="@color/black"
                android:layout_marginLeft="10dp"
                app:cornerRadius="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professor Camalionte"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>


    </LinearLayout>
</ScrollView>